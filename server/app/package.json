{
    "name": "server",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "dev": "nodemon ./bin/www",
        "test": "jest",
        "test:clear": "npm test -- --clearCache",
        "fmt": "prettier",
        "lint": "eslint",
        "lint-staged": "lint-staged"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.20.0",
        "cookie-parser": "~1.4.4",
        "date-fns": "^2.28.0",
        "debug": "~2.6.9",
        "ejs": "~2.6.1",
        "express": "~4.16.1",
        "http-errors": "~1.6.3",
        "morgan": "~1.9.1",
        "pg": "^8.7.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "eslint": "^8.6.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "jest": "^26.6.3",
        "jest-extended": "^1.2.0",
        "lint-staged": "^12.1.6",
        "nodemon": "^2.0.16",
        "prettier": "^2.5.1"
    },
    "prettier": {
        "tabWidth": 4
    },
    "lint-staged": {
        "bin/www": [
            "prettier --write",
            "eslint --fix"
        ],
        "{controllers,models}/**/*.js": [
            "prettier --write",
            "eslint --fix"
        ],
        "{app,router}.js": [
            "prettier --write",
            "eslint --fix"
        ],
        "__tests__/**/*.js": [
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
